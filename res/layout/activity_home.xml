<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="520dp"
    android:background="@drawable/gradient_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myhelp.HomeActivity" >

    <Button
        android:id="@+id/btnbuscar"
        style="@style/btnStyleBreakerBay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBuscar"
        android:layout_alignRight="@+id/listaServicos"
        android:layout_alignTop="@+id/txtBuscar"
        android:text="Buscar" />

    <Spinner
        android:id="@+id/opcoesregioes"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnbuscar"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/btnbuscar"
        android:background="@drawable/edit_text_style"
        android:popupBackground="@drawable/popup_style" />

        <ListView
            android:id="@+id/listaServicos"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >
        </ListView>

        <Spinner
            android:id="@+id/opcoeservicos"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/opcoesregioes"
            android:layout_below="@+id/opcoesregioes"
            android:background="@drawable/edit_text_style"
            android:popupBackground="@drawable/popup_style" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true" >

</ScrollView>

</RelativeLayout>
 