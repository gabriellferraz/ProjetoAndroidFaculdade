<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myhelp.MainActivity" >

    <TextView
        android:id="@+id/lblsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtsenha"
        android:layout_alignLeft="@+id/txtsenha"
        android:layout_marginBottom="19dp"
        android:text="Senha" />

    <TextView
        android:id="@+id/lbluser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtlogin"
        android:layout_alignRight="@+id/lblsenha"
        android:layout_marginBottom="20dp"
        android:text="Login"
        android:textSize="@dimen/abc_action_bar_subtitle_text_size" />
<!--
    <TextView
        android:id="@+id/cadastre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnCadastre"
        android:layout_below="@+id/btnentrar"
        android:text="Ainda não é cadastrado? Cadastre-se"
        android:textSize="@dimen/abc_action_bar_subtitle_text_size" />
  -->
    <EditText
        android:id="@+id/txtsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCadastre"
        android:layout_alignLeft="@+id/txtlogin"
        android:layout_marginBottom="33dp"
        android:autoText="false"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:inputType="textPassword"
        android:password="true" >
    </EditText>

    <EditText
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:autoText="false"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />

    </EditText>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/lbluser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher" >
    </RelativeLayout>

    <Button
        android:id="@+id/btnentrar"
        style="@style/btnStyleBreakerBay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCadastre"
        android:layout_alignBottom="@+id/btnCadastre"
        android:layout_alignParentRight="true"
        android:layout_marginRight="64dp"
        android:text="Entrar" />

    <Button
        android:id="@+id/btnCadastre"
        style="@style/btnStyleBreakerBay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbluser"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="7dp"
        android:text="Cadastre" />

</RelativeLayout>